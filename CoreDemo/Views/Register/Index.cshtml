@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using ( Html.BeginForm("Index", "Register", FormMethod.Post) )
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>

                            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                            @Html.ValidationMessageFor(x => x.Name)
                            @*  <input type="text" class="form-control" id="validationDefault01" placeholder="" name="Name" required=""> *@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-posta Adresiniz</label>
                            @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
                            @Html.ValidationMessageFor(x => x.Email)
                            @* <input type="email" class="form-control" id="validationDefault02" placeholder="" name="Email" required=""> *@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            @Html.TextBoxFor(x => x.Password, new {@class = "form-control"})
                            @Html.ValidationMessageFor(x => x.Password)
                            @*    <input type="password" class="form-control" id="password1" placeholder="" name="Password" required=""> *@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            @Html.TextBoxFor(x => x.Image, new {@class = "form-control"})
                            @Html.ValidationMessageFor(x => x.Image)
                            @* <input type="text" class="form-control" id="password2" placeholder="" name="Image" required=""> *@
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kaydol</button>
                    <p>
                        <a href="#">Tüm şartlara bende tamam diyorum</a>
                    </p>
                }

            </div>
        </div>
    </div>

</section>


@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Blog Başlığı</td>
        <td>Oluşturma Tarihi</td>
        <td>Kategori<td>
        <td>Durum</td>
        <td>Sil</td>
        <td>Düzenle</td>
    </tr>
    @foreach(var item in Model )
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@((( DateTime ) item.CreateDate).ToString("dd/MMM/yyyy"))</td>
            <td>@item.Category.Name</td>
            <td>@item.Status</td>
            <td><a href="/Blog/DeleteBlog/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.Id" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Bloglar Oluştur</a>
